{% if product %}
  <a href="{{ product.url }}" class="featured-artist-card-link">
    <div class="featured-artist-card">
      <div class="featured-artist-card__image-wrapper">
        {% if product.images.size > 1 %}
          <div class="featured-artist-card__progress">
            <div class="featured-artist-card__progress-bar"></div>
          </div>

          <div class="swiper featured-artist-swiper" data-product-id="{{ product.id }}">
            <div class="swiper-wrapper">
              {% for image in product.images limit: 4 %}
                <div class="swiper-slide">
                  <img
                    class="featured-artist-card__image"
                    src="{{ image | image_url: width: 500 }}"
                    alt="{{ product.title | escape }}"
                    loading="lazy"
                    width="500"
                    height="500"
                  >
                </div>
              {% endfor %}
            </div>
          </div>
        {% else %}
          <img
            class="featured-artist-card__image"
            src="{{ product.featured_image | image_url: width: 500 }}"
            alt="{{ product.title | escape }}"
            loading="lazy"
            width="500"
            height="500"
          >
        {% endif %}

        <span class="featured-artist-card__badge">In-store</span>

        <div class="featured-artist-card__content">
          <h4 class="featured-artist-card__title">{{ product.title }}</h4>
          <p class="featured-artist-card__price">{{ product.price | money }}</p>
        </div>
      </div>
    </div>
  </a>
{% endif %}
