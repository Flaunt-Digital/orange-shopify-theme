{{ 'quote-carousel.css' | asset_url | stylesheet_tag }}
{{ 'swiper-bundle.min.css' | asset_url | stylesheet_tag }}

<script src="{{ 'swiper-bundle.min.js' | asset_url }}" defer></script>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="quote-carousel-section section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
  <div class="page-width">
    <div class="quote-carousel {% if section.blocks.size > 1 %}swiper-wrapper{% endif %}">
      {% for block in section.blocks %}
        <div class="quote-carousel-slide {% if section.blocks.size > 1 %}swiper-slide{% endif %}">
          <p>{{ block.settings.quote_content | escape }}</p>
          <cite>{{ block.settings.quote_by_text | escape }} </cite>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const slides = document.querySelectorAll('.quote-carousel-slide');

    if (slides.length > 1) {
      new Swiper('.quote-carousel', {
        direction: 'horizontal',
        loop: true,
        slidesPerView: 1,
        effect: 'slide',
        autoplay: {
          delay: 2500,
          disableOnInteraction: false,
        },
        centeredSlides: false,
      });
    }
  });
</script>

{% schema %}
{
  "name": "Quote Carousel",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "quote_text",
      "name": "Quote Text",
      "settings": [
        {
          "type": "text",
          "id": "quote_content",
          "label": "Quote Content",
          "default": "This is a sample quote text. It will be displayed in the carousel."
        },
        {
          "type": "text",
          "id": "quote_by_text",
          "label": "Quote By",
          "default": "Jane Doe"
        }
      ]
    }
  ],
  "max_blocks": 20,
  "presets": [
    {
      "name": "Quote Carousel",
      "category": "Custom",
      "blocks": [{ "type": "quote_text" }, { "type": "quote_text" }]
    }
  ]
}
{% endschema %}
