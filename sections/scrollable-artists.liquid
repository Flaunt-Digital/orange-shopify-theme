{{ 'scrollable-artists.css' | asset_url | stylesheet_tag }}

<script src="https://unpkg.com/gsap@3/dist/gsap.min.js" defer></script>
<script src="https://unpkg.com/gsap@3/dist/ScrollTrigger.min.js" defer></script>
<script src="https://unpkg.com/gsap@3/dist/Flip.min.js" defer></script>

<script src="{{ 'scrollable-artists.js' | asset_url }}" defer></script>

<div>
  <h2 class="section-header">WE'RE OBSESSED WITH GOOD MUSIC</h2>
  <p class="section-subheader">
    Lorem ipsum dolor sit amet consectetur. Augue commodo tempor sagittis ipsum. Sed non non aenean congue quis faucibus
    aliquam. Quisque amet at eu a gravida hendrerit vitae elementum.
  </p>
</div>

<div class="gallery-wrap">
  <div class="gallery gallery--bento gallery--switch" id="gallery-artists">
    {% assign blocks = section.blocks | slice: 0, 9 %}
    {% assign block_count = blocks.size %}

    {% for block in blocks %}
      <div
        class="gallery__item{% if forloop.index == 5 %} gallery__item--centerpiece{% endif %}"
        id="block-{{ block.id }}"
      >
        <img
          height="100"
          width="100"
          src="{{ block.settings.image | img_url: '800x' }}"
          alt="Artist image {{ forloop.index }}"
          loading="lazy"
        >
        {% if forloop.index == 5 %}
          <div class="centerpiece-content">
            <h3>{{ block.settings.title }}</h3>
            <p>{{ block.settings.description }}</p>
          </div>
        {% endif %}
      </div>
    {% endfor %}

    {% for i in (block_count..8) %}
      <div class="gallery__item gallery__item--placeholder">
        <img
          height="100"
          width="100"
          src="{{ '' | asset_url }}"
          alt="Placeholder artist"
          loading="lazy"
        >
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Scrollable Artists",
  "tag": "section",
  "class": "scrollable-artists",
  "settings": [],
  "blocks": [
    {
      "type": "artist",
      "name": "Artist",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Artist Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Artist Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Artist Description"
        }
      ]
    }
  ],
  "max_blocks": 9,
  "presets": [
    {
      "name": "Scrollable Artists",
      "category": "Custom",
      "blocks": [
        { "type": "artist" },
        { "type": "artist" },
        { "type": "artist" },
        { "type": "artist" },
        { "type": "artist" },
        { "type": "artist" },
        { "type": "artist" },
        { "type": "artist" },
        { "type": "artist" }
      ]
    }
  ]
}
{% endschema %}
