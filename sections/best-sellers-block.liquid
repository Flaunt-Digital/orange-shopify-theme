<div class="best-sellers-block">
  <h2 class="best-sellers-title">{{ section.settings.title }}</h2>
</div>

{% schema %}
{
  "name": "Best Sellers Block",
  "settings": [
    {
      "type": "header",
      "content": "Best Sellers Block Settings"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Best Sellers"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": ""
    }
  ],
  "presets": [
    {
      "name": "Best Sellers Block",
      "category": "Custom"
    }
  ]
}
{% endschema %}
