{{ 'section-featured-artists-products.css' | asset_url | stylesheet_tag }}
{{ 'component-product-card.css' | asset_url | stylesheet_tag }}
{{ 'swiper-bundle.min.css' | asset_url | stylesheet_tag }}
<script src="{{ 'swiper-bundle.min.js' | asset_url }}" defer></script>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{% assign product_count = section.blocks.size %}
{% if product_count >= 4 %}
  <div class="featured-artists-products section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
    <div class="page-width">
      <div class="featured-artists-products__header">
        {% if section.settings.spotify_url %}
          <a href="{{ section.settings.spotify_url }}" target="_blank" class="featured-artists-products__spotify">
            <img height="100" width="100" src="{{ 'icon-spotify.svg' | asset_url }}" alt="Spotify">
          </a>
        {% endif %}
        <div class="featured-artists-products__text">
          <h2>{{ section.settings.artist_name }}</h2>
          <p>
            {{ section.settings.genre }}
          </p>
          <p>{{ section.settings.bio }}</p>
        </div>
      </div>
    </div>

    <div class="featured-artists-products__products color-{{ section.settings.color_scheme_lower }}">
      <div class="featured-artists-page-width">
        <h3>Products they love</h3>
        {% if product_count > 4 %}
          <div class="featured-artists-products__swiper swiper">
            <div class="swiper-wrapper">
              {% for block in section.blocks %}
                {% if block.settings.product %}
                  <div class="swiper-slide">
                    {% render 'product-card-multicolour', product: block.settings.product %}
                  </div>
                {% endif %}
              {% endfor %}
            </div>
            <div class="swiper-pagination"></div>
          </div>
          <div class="swiper-button-prev">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
              <!--!Font Awesome Free 6.7.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2025 Fonticons, Inc.--><path d="M512 256A256 256 0 1 0 0 256a256 256 0 1 0 512 0zM215 127c9.4-9.4 24.6-9.4 33.9 0s9.4 24.6 0 33.9l-71 71L392 232c13.3 0 24 10.7 24 24s-10.7 24-24 24l-214.1 0 71 71c9.4 9.4 9.4 24.6 0 33.9s-24.6 9.4-33.9 0L103 273c-9.4-9.4-9.4-24.6 0-33.9L215 127z"/>
            </svg>
          </div>
          <div class="swiper-button-next">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
              <!--!Font Awesome Free 6.7.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2025 Fonticons, Inc.--><path d="M0 256a256 256 0 1 0 512 0A256 256 0 1 0 0 256zM297 385c-9.4 9.4-24.6 9.4-33.9 0s-9.4-24.6 0-33.9l71-71L120 280c-13.3 0-24-10.7-24-24s10.7-24 24-24l214.1 0-71-71c-9.4-9.4-9.4-24.6 0-33.9s24.6-9.4 33.9 0L409 239c9.4 9.4 9.4 24.6 0 33.9L297 385z"/>
            </svg>
          </div>
        {% else %}
          <div class="featured-artists-products__grid">
            {% for block in section.blocks %}
              {% if block.settings.product %}
                <div class="featured-artists-products__card">
                  {% render 'product-card-multicolour', product: block.settings.product %}
                </div>
              {% endif %}
            {% endfor %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      if (document.querySelector('.featured-artists-products__swiper')) {
        new Swiper('.featured-artists-products__swiper', {
          slidesPerView: 4,
          spaceBetween: 24,
          navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
          },
          pagination: {
            el: '.swiper-pagination',
            clickable: true,
          },
        });
      }
    });
  </script>
{% elsif request.design_mode %}
  <div class="featured-artists-products__missing-message">
    Please add 4 product blocks in the section settings to display this section.
  </div>
{% endif %}

{% schema %}
{
  "name": "Featured Artist Products",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "text",
      "id": "artist_name",
      "label": "Artist Name",
      "default": "Artist Name"
    },
    {
      "type": "text",
      "id": "genre",
      "label": "Genre",
      "default": "Genre"
    },
    {
      "type": "textarea",
      "id": "bio",
      "label": "Artist Bio",
      "default": "Bio - Lorem ipsum dolor sit amet consectetur. Nunc quis felis bibendum magna lorem semper non sed. Euismod nibh arcu turpis ut montes adipiscing."
    },
    {
      "type": "url",
      "id": "spotify_url",
      "label": "Spotify URL"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme_lower",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select product"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Featured Artist Products",
      "category": "Custom",
      "blocks": [{ "type": "product" }, { "type": "product" }, { "type": "product" }, { "type": "product" }]
    }
  ]
}
{% endschema %}
