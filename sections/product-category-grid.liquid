{{ 'section-product-category-grid.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="product-category-grid section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
  {% if collection and collection.products.size > 0 %}
    <!-- Featured + Two Stacked Layout -->
    <div class="product-grid-featured">
      <!-- Featured Product (3/4 width) -->
      <div class="product-grid-featured__main">
        {% assign featured_product = collection.products.first %}
        <div class="product-card product-card--featured">
          <a href="{{ featured_product.url }}">
            {% if featured_product.featured_media %}
              <img
                src="{{ featured_product.featured_media | image_url: width: 800 }}"
                alt="{{ featured_product.featured_media.alt | escape }}"
                class="product-card__image"
                width="800"
                height="800"
              >
            {% else %}
              {{ 'product-1' | placeholder_svg_tag: 'product-card__image' }}
            {% endif %}
          </a>
          <div class="product-card__content">
            <h3 class="product-card__title">{{ featured_product.title }}</h3>
            <div class="product-card__price">{{ featured_product.price | money }}</div>
          </div>
        </div>
      </div>

      <!-- Two Stacked Products (1/4 width) -->
      <div class="product-grid-featured__side">
        {% for product in collection.products offset: 1 limit: 2 %}
          <div class="product-card product-card--small">
            <a href="{{ product.url }}">
              {% if product.featured_media %}
                <img
                  src="{{ product.featured_media | image_url: width: 400 }}"
                  alt="{{ product.featured_media.alt | escape }}"
                  class="product-card__image"
                  width="400"
                  height="400"
                >
              {% else %}
                {{ 'product-1' | placeholder_svg_tag: 'product-card__image' }}
              {% endif %}
            </a>
            <div class="product-card__content">
              <h3 class="product-card__title">{{ product.title }}</h3>
              <div class="product-card__price">{{ product.price | money }}</div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>

    <!-- 3x3 Grid of Remaining Products -->
    {% if collection.products.size > 3 %}
      <div class="product-grid-regular">
        {% for product in collection.products offset: 3 limit: 9 %}
          <div class="product-card">
            <a href="{{ product.url }}">
              {% if product.featured_media %}
                <img
                  src="{{ product.featured_media | image_url: width: 400 }}"
                  alt="{{ product.featured_media.alt | escape }}"
                  class="product-card__image"
                  width="400"
                  height="400"
                >
              {% else %}
                {{ 'product-1' | placeholder_svg_tag: 'product-card__image' }}
              {% endif %}
            </a>
            <div class="product-card__content">
              <h3 class="product-card__title">{{ product.title }}</h3>
              <div class="product-card__price">{{ product.price | money }}</div>
            </div>
          </div>
        {% endfor %}
      </div>
    {% endif %}
  {% endif %}
</div>

{% schema %}
{
  "name": "Product Category Grid",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Product Category Grid",
      "category": "Custom"
    }
  ]
}
{% endschema %}
