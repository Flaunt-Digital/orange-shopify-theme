{{ 'section-product-category-grid.css' | asset_url | stylesheet_tag }}
{{ 'component-product-category-card.css' | asset_url | stylesheet_tag }}
{{ 'swiper-bundle.min.css' | asset_url | stylesheet_tag }}
<script src="{{ 'swiper-bundle.min.js' | asset_url }}" defer></script>
<script src="{{ 'card-swiper.js' | asset_url }}" defer></script>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="product-category-grid section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
  {% if collection.products.size > 0 %}
    {% assign featured_product = blank %}
    {% for product in collection.products %}
      {% if product.tags contains 'featured' %}
        {% assign featured_product = product %}
        {% break %}
      {% endif %}
    {% endfor %}
    {% unless featured_product %}
      {% assign featured_product = collection.products.first %}
    {% endunless %}

    <div class="product-category-grid-featured page-width">
      <div class="product-category-grid-featured__main">
        {% render 'product-category-card',
          product: featured_product,
          modifier: 'product-category-card--featured',
          image_width: 800,
          image_modifier: 'product-category-card__image--featured'
        %}
      </div>
      <div class="product-category-grid-featured__side">
        {% assign side_count = 0 %}
        {% for product in collection.products %}
          {% unless product.id == featured_product.id %}
            {% if side_count < 2 %}
              {% render 'product-category-card',
                product: product,
                modifier: 'product-category-card--small',
                image_width: 400
              %}
              {% assign side_count = side_count | plus: 1 %}
            {% endif %}
          {% endunless %}
        {% endfor %}
      </div>
    </div>
    {% assign total_grid_products = collection.products.size | minus: 3 %}
    {% if total_grid_products > 0 %}
      <div class="product-category-grid-regular page-width">
        {% assign grid_count = 0 %}
        {% assign skip_count = 0 %}
        {% for product in collection.products %}
          {% unless product.id == featured_product.id %}
            {% if skip_count < 2 %}
              {% assign skip_count = skip_count | plus: 1 %}
            {% else %}
              {% assign hidden_class = '' %}
              {% if grid_count >= 6 %}
                {% assign hidden_class = 'product-category-card--hidden' %}
              {% endif %}
              {% render 'product-category-card', product: product, modifier: hidden_class, image_width: 400 %}
              {% assign grid_count = grid_count | plus: 1 %}
            {% endif %}
          {% endunless %}
        {% endfor %}
      </div>

      {% if total_grid_products > 6 %}
        <div class="product-category-load-more">
          <button class="product-category-load-more__button button button--primary" onclick="loadMoreProducts()">
            Load More
          </button>
        </div>
      {% endif %}
    {% endif %}
  {% endif %}
</div>

<script>
  function loadMoreProducts() {
    const hiddenProducts = document.querySelectorAll('.product-category-card--hidden');
    const loadMoreButton = document.querySelector('.product-category-load-more__button');

    hiddenProducts.forEach((product) => {
      product.classList.remove('product-category-card--hidden');
    });

    loadMoreButton.style.display = 'none';
  }
</script>

{% schema %}
{
  "name": "Product Category Grid",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Product Category Grid",
      "category": "Custom"
    }
  ]
}
{% endschema %}
