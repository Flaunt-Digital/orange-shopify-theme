{{ 'section-usp-block.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="page-width-usp section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
  {% case section.settings.layout_style %}
    {% when 'usp-1' %}
      {% render 'usp-1', section: section %}
    {% when 'usp-2' %}
      {% render 'usp-2', section: section %}
    {% else %}
      <p>No layout selected.</p>
  {% endcase %}
</div>

{% schema %}
{
  "name": "USP Section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "select",
      "id": "layout_style",
      "label": "Layout Style",
      "default": "usp-1",
      "options": [
        { "value": "usp-1", "label": "Short USP 1" },
        { "value": "usp-2", "label": "Short USP 2" }
      ]
    },
    {
      "type": "text",
      "id": "title",
      "label": "USP Title",
      "default": "Short USP Title"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "USP Description",
      "default": "Lorem ipsum dolor sit amet consectetur. Ultrices et aliquam purus et amet fermentum sed egestas."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "USP Image"
    },
    {
      "type": "text",
      "id": "title_alt",
      "label": "USP Title Alternative (USP 1 only)",
      "default": "Short USP Title"
    },
    {
      "type": "textarea",
      "id": "description_alt",
      "label": "USP Description Alternative (USP 1 only)",
      "default": "Lorem ipsum dolor sit amet consectetur. Ultrices et aliquam purus et amet fermentum sed egestas."
    },
    {
      "type": "image_picker",
      "id": "image_alt",
      "label": "USP Image Alternative (USP 1 only)"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "USP Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}
