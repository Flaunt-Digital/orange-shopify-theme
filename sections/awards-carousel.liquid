{{ 'awards-carousel.css' | asset_url | stylesheet_tag }}
{{ 'swiper-bundle.min.css' | asset_url | stylesheet_tag }}

<script src="{{ 'swiper-bundle.min.js' | asset_url }}" defer></script>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="awards-section section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
  <div class="awards-swiper">
    <div class="awards-carousel swiper-wrapper">
      {% for block in section.blocks %}
        <div class="award-slide swiper-slide">
          <img
            height="200"
            width="auto"
            {% if block.settings.image != blank %}
              src="{{ block.settings.image | image_url: width: 350 }}"
              alt="{{ block.settings.image.alt }}"
            {% else %}
              src="{{ 'no-image.webp' | asset_url }}"
            {% endif %}
            loading="lazy"
          >
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const carouselSlider = new Swiper('.awards-swiper', {
      direction: 'horizontal',
      loop: true,
      slidesPerView: 4.5,
      spaceBetween: 30,
      effect: 'slide', // ensure slide effect
      autoplay: {
        delay: 2500,
        disableOnInteraction: false,
      },
      centeredSlides: false,
      breakpoints: {
        320: {
          slidesPerView: 1.5,
          spaceBetween: 30,
        },
        1024: {
          slidesPerView: 4.5,
          spaceBetween: 30,
        },
      },
    });
  });
</script>

{% schema %}
{
  "name": "Awards Carousel",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "award_image",
      "name": "Award Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Award Image"
        }
      ]
    }
  ],
  "max_blocks": 20,
  "presets": [
    {
      "name": "Awards Carousel",
      "category": "Custom",
      "blocks": [
        { "type": "award_image" },
        { "type": "award_image" },
        { "type": "award_image" },
        { "type": "award_image" },
        { "type": "award_image" }
      ]
    }
  ]
}
{% endschema %}
