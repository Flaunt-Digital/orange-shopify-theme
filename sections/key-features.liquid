{{ 'section-key-features.css' | asset_url | stylesheet_tag }}

<div class="key-features-section page-width color-{{ section.settings.color_scheme }}">
  <div class="key-features-inner">
    <h2 class="mobile-only-title">{{ section.settings.titles }}</h2>
    <div class="features-list">
      {% for block in section.blocks %}
        <div class="feature-item">
          <h3 class="feature-title">{{ block.settings.title }}</h3>
          <p class="feature-description">{{ block.settings.description }}</p>
        </div>
      {% endfor %}
    </div>

    {% if section.settings.compare_button_label != blank and section.settings.compare_button_link != blank %}
      <div class="features-button-wrapper">
        <a href="{{ section.settings.compare_button_link }}" class="features-button">
          {{ section.settings.compare_button_label }}
        </a>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Key Features",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "text",
      "id": "titles",
      "label": "Section Title",
      "default": "Key Features"
    },
    {
      "type": "text",
      "id": "compare_button_label",
      "label": "Compare Button Label",
      "default": "Compare"
    },
    {
      "type": "url",
      "id": "compare_button_link",
      "label": "Compare Button Link"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "limit": 4,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Feature Title",
          "default": "Key Feature"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Feature Description",
          "default": "Short description of the feature."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Key Features",
      "category": "Custom",
      "blocks": [
        {
          "type": "feature"
        },
        {
          "type": "feature"
        },
        {
          "type": "feature"
        },
        {
          "type": "feature"
        }
      ]
    }
  ]
}
{% endschema %}
