{{ 'section-image-text-stack.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
  <div class="page-width">
    <div class="text-stack">
      <div class="container">
        <div class="text-stack__inner">
          <div class="text-stack__media-grid">
            <img
              height="100%"
              width="100%"
              {% if section.settings.image_1 != blank %}
                src="{{ section.settings.image_1 | image_url: width: 300 }}"
              {% else %}
                src="{{ 'no-image.webp' | asset_url }}"
              {% endif %}
              class="media-grid__item media-grid__item--1"
              alt="{{ section.settings.image_1.alt }}"
            >
            <div class="media-grid__item media-grid__item--2">
              <img
                height="100%"
                width="100%"
                {% if section.settings.image_2 != blank %}
                  src="{{ section.settings.image_2 | image_url: width: 300 }}"
                {% else %}
                  src="{{ 'no-image.webp' | asset_url }}"
                {% endif %}
                id="parallax-image"
                alt="{{ section.settings.image_2.alt }}"
              >
            </div>
            <img
              height="100%"
              width="100%"
              {% if section.settings.image_3 != blank %}
                src="{{ section.settings.image_3 | image_url: width: 300 }}"
              {% else %}
                src="{{ 'no-image.webp' | asset_url }}"
              {% endif %}
              class="media-grid__item media-grid__item--3"
              alt="{{ section.settings.image_3.alt }}"
            >
          </div>

          <div class="text-stack__content">
            <h2>{{ section.settings.title }}</h2>
            <h3>{{ section.settings.subtitle }}</h3>
            <p>{{ section.settings.description }}</p>
            <a href="{{ section.settings.cta_link }}" class="button button--primary text-stack__btn">
              {{- section.settings.cta_text -}}
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Image Text Stack",
  "tag": "section",
  "class": "shopify-section text-stack",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Top Right Image"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Middle Image"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Bottom Left Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Our Artists"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Subtitle dolor sit amet"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Lorem ipsum dolor sit amet consectetur. Feugiat egestas sit sapien in. Quisque volutpat mattis non posuere sit leo libero. Et blandit iaculis convallis sit duis a nulla elementum. Neque ante ultricies aliquam turpis morbi dictum vel non at. Nibh laoreet duis lectus tortor augue felis nec. Massa turpis vitae pulvinar nunc feugiat non neque."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Call to Action Text"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Call to Action Link"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Image Text Stack",
      "category": "Custom"
    }
  ]
}
{% endschema %}
